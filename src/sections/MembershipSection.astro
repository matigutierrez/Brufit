  price: string;
  title: string;
  description: string;
}

const membershipData: MembershipData[]  = [
  {
    price: '$60.000',
    title: 'Personalizado',
    description: 'Entrenamiento 3 veces por semana, entrenamiento personalizado, seguimientos del extreno y profesores profesionales.',
  },
  {
    price: '$30.000',
    title: 'Acceso al GYM',
    description: 'Plan de acceso de 6 veces por semana con uso libre de maquinas y rutinas de entrenamiento.',
  },
  {
    price: '$27.000',
    title: 'Acceso al GYM',
    description: 'Plan de acceso de 4 veces por semana con uso libre de maquinas y rutinas de entrenamiento.',
  },
  {
    price: '$25.000',
    title: 'Acceso al GYM',
    description: 'Plan de acceso de 3 veces por semana con uso libre de maquinas y rutinas de entrenamiento.',
  },
  {
    price: '$75.000',
